<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="On internet connection and wait for 30 second "/>

    <Button
        android:id="@+id/btnBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:layout_margin="1dp"
        android:layout_centerInParent="true"
        android:text="Click here for Banner Ads" />

    <Button
        android:id="@+id/btnInterstitial"
        android:background="#FFEB3B"
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBanner"
        android:text="Click here for Interstitial Ads" />


</RelativeLayout>
